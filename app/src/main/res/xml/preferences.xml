<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="Login">
        <EditTextPreference
            android:key="username"
            android:title="User Name"
            android:defaultValue="student"/>
        <EditTextPreference
            android:key="password"
            android:password="true"
            android:title="Password"
            android:defaultValue="password"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Network">
        <ListPreference android:key="interval"
            android:title="Interval"
            android:defaultValue="0"
            android:entries="@array/intervals"
            android:entryValues="@array/intervalValues" />
    </PreferenceCategory>
</PreferenceScreen>